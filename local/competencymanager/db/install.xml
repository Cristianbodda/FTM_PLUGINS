<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/competencymanager/db" VERSION="20251228" COMMENT="Tables for Competency Manager">
  <TABLES>
    <TABLE NAME="local_competencymanager_auth" COMMENT="Student authorizations to view own reports">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="User ID"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Course ID"/>
        <FIELD NAME="authorized" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1=authorized, 0=not"/>
        <FIELD NAME="authorizedby" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Who authorized"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_courseid" UNIQUE="true" FIELDS="userid, courseid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_competencymanager_log" COMMENT="Import logs">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="questionsimported" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="questionsfailed" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="competenciesassigned" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="errors" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="courseid_time" UNIQUE="false" FIELDS="courseid, timecreated"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_student_coaching" COMMENT="Assegnazione studenti ai coach con gestione percorso 6 settimane">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID dello studente"/>
        <FIELD NAME="coachid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID del coach/docente assegnato"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID del corso"/>
        <FIELD NAME="sector" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false" COMMENT="Settore: AUTOMOBILE, CHIMFARM, MECCANICA"/>
        <FIELD NAME="area" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false" COMMENT="Area di specializzazione"/>
        <FIELD NAME="date_start" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Data entrata misura (timestamp)"/>
        <FIELD NAME="date_end" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Data fine prevista 6 settimane (timestamp)"/>
        <FIELD NAME="date_extended" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Data prolungo se necessario (timestamp)"/>
        <FIELD NAME="current_week" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="Settimana corrente (1-6, 7+ per prolungo)"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="active" SEQUENCE="false" COMMENT="Stato: active, delayed, completed"/>
        <FIELD NAME="notes" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Note del coach"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="coachid_fk" TYPE="foreign" FIELDS="coachid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="courseid_fk" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_courseid_idx" UNIQUE="true" FIELDS="userid, courseid"/>
        <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status"/>
        <INDEX NAME="sector_idx" UNIQUE="false" FIELDS="sector"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_student_sectors" COMMENT="Settori assegnati agli studenti (multi-settore supportato)">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID dello studente"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="ID del corso (0 = globale)"/>
        <FIELD NAME="sector" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" COMMENT="Settore: AUTOMOBILE, MECCANICA, LOGISTICA, ecc."/>
        <FIELD NAME="is_primary" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1 = settore primario assegnato dalla segreteria"/>
        <FIELD NAME="source" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="quiz" SEQUENCE="false" COMMENT="Origine: manual, quiz, enrollment"/>
        <FIELD NAME="quiz_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Numero quiz completati in questo settore"/>
        <FIELD NAME="first_detected" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Timestamp prima rilevazione"/>
        <FIELD NAME="last_detected" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Timestamp ultima rilevazione"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="courseid_fk" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_courseid_sector_idx" UNIQUE="true" FIELDS="userid, courseid, sector"/>
        <INDEX NAME="userid_primary_idx" UNIQUE="false" FIELDS="userid, is_primary"/>
        <INDEX NAME="sector_idx" UNIQUE="false" FIELDS="sector"/>
        <INDEX NAME="source_idx" UNIQUE="false" FIELDS="source"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_coach_evaluations" COMMENT="Valutazioni formatore - header per ogni sessione di valutazione">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="studentid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID dello studente valutato"/>
        <FIELD NAME="coachid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID del coach che valuta"/>
        <FIELD NAME="sector" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" COMMENT="Settore valutato: AUTOMOBILE, MECCANICA, ecc."/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="ID corso di contesto"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="draft" SEQUENCE="false" COMMENT="Stato: draft, completed, signed"/>
        <FIELD NAME="is_final_week" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1 = valutazione obbligatoria fine percorso"/>
        <FIELD NAME="evaluation_date" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Data completamento valutazione"/>
        <FIELD NAME="notes" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Note generali del coach"/>
        <FIELD NAME="student_can_view" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1 = studente autorizzato a vedere"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="studentid_fk" TYPE="foreign" FIELDS="studentid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="coachid_fk" TYPE="foreign" FIELDS="coachid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="studentid_sector_idx" UNIQUE="false" FIELDS="studentid, sector"/>
        <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_coach_eval_ratings" COMMENT="Valutazioni singole per competenza (scala Bloom 0=N/O, 1-6)">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="evaluationid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="FK a local_coach_evaluations"/>
        <FIELD NAME="competencyid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="FK a competency"/>
        <FIELD NAME="rating" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="0=N/O, 1-6=Bloom"/>
        <FIELD NAME="notes" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Note per questa competenza"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="evaluationid_fk" TYPE="foreign" FIELDS="evaluationid" REFTABLE="local_coach_evaluations" REFFIELDS="id"/>
        <KEY NAME="competencyid_fk" TYPE="foreign" FIELDS="competencyid" REFTABLE="competency" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="evaluationid_competencyid_idx" UNIQUE="true" FIELDS="evaluationid, competencyid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_coach_eval_history" COMMENT="Storico modifiche valutazioni per audit trail">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="evaluationid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="FK a local_coach_evaluations"/>
        <FIELD NAME="ratingid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="FK a local_coach_eval_ratings (nullable)"/>
        <FIELD NAME="action" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="Azione: created, updated, deleted"/>
        <FIELD NAME="field_changed" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false" COMMENT="Campo modificato"/>
        <FIELD NAME="old_value" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Valore precedente"/>
        <FIELD NAME="new_value" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Nuovo valore"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Chi ha fatto la modifica"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="evaluationid_fk" TYPE="foreign" FIELDS="evaluationid" REFTABLE="local_coach_evaluations" REFFIELDS="id"/>
        <KEY NAME="userid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="evaluationid_time_idx" UNIQUE="false" FIELDS="evaluationid, timecreated"/>
        <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
