<!-- DOMANDA 1: Area DT - Disegno tecnico -->
<question type="multichoice">
    <n>
        <text>MECC_BASE_Q01 - MECCANICA_DT_01</text>
    </n>
    <questiontext format="html">
        <text><![CDATA[<p>Quale tipo di linea viene utilizzata nel disegno tecnico per rappresentare i contorni nascosti?</p>]]></text>
    </questiontext>
    <defaultgrade>1.0000000</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>
    <answer fraction="100" format="html">
        <text><![CDATA[<p>Linea tratteggiata</p>]]></text>
        <feedback format="html"><text><![CDATA[<p>Corretto! La linea tratteggiata indica i contorni non visibili.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
        <text><![CDATA[<p>Linea continua grossa</p>]]></text>
        <feedback format="html"><text><![CDATA[<p>Non corretto. La linea continua grossa indica i contorni visibili.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
        <text><![CDATA[<p>Linea a tratto e punto</p>]]></text>
        <feedback format="html"><text><![CDATA[<p>Non corretto. Questa linea indica gli assi di simmetria.</p>]]></text></feedback>
    </answer>
    <answer fraction="0" format="html">
        <text><![CDATA[<p>Linea continua sottile</p>]]></text>
        <feedback format="html"><text><![CDATA[<p>Non corretto. Questa linea è usata per le quote e i richiami.</p>]]></text></feedback>
    </answer>
